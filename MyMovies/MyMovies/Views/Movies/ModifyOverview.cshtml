
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@model List<MyMovies.ViewModels.MovieViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Modify Overview";
}

    
    <div class="container">
        <h2 style="margin:50px">Modify Movies</h2>
        <table class="table">
            @foreach (var movie in Model)
            {
                <tr>
                    <td class="text-warning">@movie.Title</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Movies" asp-action="ModifyMovie" asp-route-id="@movie.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" onclick="return confirm('Are you sure you want to delete this movie?')">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>

        <a asp-controller="Movies" asp-action="Create" class="btn btn-warning">Add Movie</a>

    </div>
   

