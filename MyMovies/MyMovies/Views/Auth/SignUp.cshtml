
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model MyMovies.ViewModels.SignUpModel


@{
    Layout = "_Layout";
    ViewData["Title"] = "SignUp";
}

    <div class="createMovieHeader">
        Sign Up / Register
    </div>

    <div class="form-container">
        <form asp-controller="Auth" asp-action="SignUp" method="post">
            <div asp-validation-summary="All" class="form-validation"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword" class="control-label">Repeat Password</label>
                <input asp-for="RepeatPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-warning" />
            </div>
        </form>
    </div>
   